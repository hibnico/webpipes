<ivy-module version="2.0">
    <info organisation="org.hibnet" module="webpipes" />
    <configurations>
	    <conf name="default" extends="runtime" />
		<conf name="runtime" description="Runtime configuration"/>
		<conf name="compile" description="Used only for compilation" />
		<conf name="test" extends="compile,runtime" description="Unit testing configuration" visibility="private"/>
	</configurations>
    <publications>
        <artifact name="webpipes" type="jar"     ext="jar" conf="default" />
        <artifact name="webpipes" type="sources" ext="jar" conf="default" />
        <artifact name="webpipes" type="javadoc" ext="jar" conf="default" />
    </publications>
    <dependencies defaultconf="runtime,compile->default">
	    <dependency org="org.mozilla" name="rhino" rev="1.7R4" />
	    <dependency org="org.webjars" name="webjars-locator" rev="0.17" />

        <dependency org="org.webjars" name="json2" rev="20110223" />
        <dependency org="org.webjars" name="handlebars" rev="1.3.0" />
        <dependency org="org.webjars" name="coffee-script" rev="1.8.0" />
        <dependency org="org.webjars" name="emberjs" rev="1.7.0" />

        <dependency org="com.google.javascript" name="closure-compiler" rev="v20140730" />
        <dependency org="commons-pool"          name="commons-pool"          rev="1.6" />
        <dependency org="org.apache.commons" name="commons-lang3" rev="3.3.2" />
        <dependency org="com.google.guava" name="guava" rev="18.0" />

        <!-- for ruby sass -->
        <dependency org="org.jruby" name="jruby-core" rev="1.7.18" />
        <dependency org="org.jruby" name="jruby-stdlib" rev="1.7.18" />
        <dependency org="me.n4u.sass" name="sass-gems" rev="3.2.1" />
	
	    <!-- to compile less -->
	    <dependency org="org.webjars" name="less" rev="1.7.3" />
	    <dependency org="com.github.sommeri" name="less4j" rev="1.8.0" />

	    <!-- to compile react JSX -->
	    <dependency org="org.webjars" name="requirejs" rev="2.1.14-1" />
        <dependency org="org.webjars" name="react" rev="0.11.1" />

        <dependency org="org.apache.ant" name="ant" rev="1.8.4" conf="compile->default" />

        <dependency org="junit" name="junit" rev="4.10" conf="test->default"/>
        <dependency org="org.slf4j" name="slf4j-simple" rev="1.7.7" conf="test->default" />
    </dependencies>
</ivy-module>